{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext",
      "es6"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "jsx": "react-jsx",
    "allowJs": true,
    "jsxImportSource": "hono/jsx",
    "noEmit": true,
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
